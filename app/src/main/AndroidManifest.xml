<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myshoppingapp">

    <uses-permission
        android:name="android.permission.ACCESS_BACKGROUND_LOCATION"
        tools:node="remove" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddNewCategory"
            android:exported="false" />
        <activity
            android:name=".AddNewProduct"
            android:exported="false" />
        <activity
            android:name=".adminPage"
            android:exported="false" />
        <activity
            android:name=".chart"
            android:exported="false" />
        <activity android:name=".MakeOrder" />
        <activity
            android:name=".CustomAdapter"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ShoppingCart"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ProductsDetails"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Products" />
        <activity
            android:name=".HomeActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>